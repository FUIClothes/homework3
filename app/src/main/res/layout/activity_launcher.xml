<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/homeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/poppins_bold"
        android:text="ChatApp"
        android:textAlignment="center"
        android:textColor="#03A9F4"
        android:textSize="48sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_marginBottom="24dp"
        app:srcCompat="@drawable/undraw_chatting_re_j55r" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_input_p"
        android:layout_width="355dp"
        android:layout_height="68dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="2dp"
        app:boxCornerRadiusBottomStart="2dp"
        app:boxCornerRadiusTopEnd="2dp"
        app:boxCornerRadiusTopStart="2dp">

        <EditText
            android:id="@+id/input_username"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:ellipsize="none"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/username"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:scrollbarSize="4dp"
            android:textSize="12sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_primary"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/login"
        android:textSize="12sp" />

</LinearLayout>